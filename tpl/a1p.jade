
//
  jade -w tpl/a1p.jade -O cfg/config.json -P  -o .

include mixins
extends layout
block content
 
  .rateframe.rateframe_a1p#a1p_html5
    .topcopy.topcopy_top Choose Winter, Summer or Summer Event Day.  Drag slider to compare on- and off-peak rates.*

    .buttons.buttons_center
      .button(data-rate='.rate_a1p_winter') Winter Rate
      .button.active(data-rate='.rate_a1p_summer') Summer Rate
      .button.button_long(data-rate='.rate_a1p_summer_day') Summer Event Day Rate
    .clear

    .rates
      .rate.rate_a1p_summer.on
        include rate_a1p_summer
      .rate.rate_a1p_winter.off
        include rate_a1p_winter
      .rate.rate_a1p_summer_day.off
        include rate_a1p_summer_day
 
    .footer * Based on A1 rates per kWh as of 5/1/14.  Customer charges apply in addition to the kWh charges shown.  Rates subject to change.  See more details on A1, A6 and A10 business electric rates.


  .flashframe#a1p_flash
    div#flashContent
      object#pge_a1_pdp_slider_07-31-14_434x282(classid='clsid:d27cdb6e-ae6d-11cf-96b8-444553540000', width='434', height='282', align='middle')
        param(name='movie', value='./flash/pge_a1_pdp_slider_07-31-14_434x282.swf')
        param(name='quality', value='high')
        param(name='bgcolor', value='#ffffff')
        param(name='play', value='true')
        param(name='loop', value='true')
        param(name='wmode', value='window')
        param(name='scale', value='showall')
        param(name='menu', value='true')
        param(name='devicefont', value='false')
        param(name='salign', value='')
        param(name='allowScriptAccess', value='sameDomain')
        //if !IE
        object(type='application/x-shockwave-flash', data='./flash/pge_a1_pdp_slider_07-31-14_434x282.swf', width='434', height='282')
          param(name='movie', value='./flash/pge_a1_pdp_slider_07-31-14_434x282.swf')
          param(name='quality', value='high')
          param(name='bgcolor', value='#ffffff')
          param(name='play', value='true')
          param(name='loop', value='true')
          param(name='wmode', value='window')
          param(name='scale', value='showall')
          param(name='menu', value='true')
          param(name='devicefont', value='false')
          param(name='salign', value='')
          param(name='allowScriptAccess', value='sameDomain')
          // <![endif]
          a(href='http://www.adobe.com/go/getflash')
            img(src='http://www.adobe.com/images/shared/download_buttons/get_flash_player.gif', alt='Get Adobe Flash player')
          //if !IE
        // <![endif]
      


    script(type='text/javascript').

      var scripts = {
        "./jst/": ["main", "pge", "rate"],
        "./jst/lib/": ["jquery.min", "moment", "jquery.drag"]
      };

      loader.scripts = scripts;
      window.cfg = !{JSON.stringify(cfg)};

      loader.i( function(result) {
        if (result) {
          pge.i();
          rate.i('.rate_a1p_summer');
        } else {
          document.getElementById('a1p_html5').style.display = 'none';
          document.getElementById('a1p_flash').style.display = 'block';
        }

      });

