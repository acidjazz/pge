
//
  jade -w tpl/ag4a.jade -O cfg/config.json -P  -o .

include mixins
extends layout
block content
 
  .rateframe.rateframe_ag4a#ag4a_html5
    .topcopy Choose Winter or Summer.  Drag slider to compare on- and off-peak rates.*

    .buttons
      .button(data-rate='.rate_ag4a_winter') Winter Rate
      .button.active(data-rate='.rate_ag4a_summer') Summer Rate
    .clear

    .rates
      .rate.rate_ag4a_summer.on
        include rate_ag4a_summer
      .rate.rate_ag4a_winter.off
        include rate_ag4a_winter
 
    .footer * Based on AG4A rates per kWh as of 5/1/14.  See more details on other AG4 and AG5 agriculture electric rates.  Customer and demand charges apply in addition to the kWh charges shown.  Electric rates subject to change.

  .flashframe#ag4a_flash
    div#flashContent
      object#pge_ag4a_tou_slider_07-31-14_434x282(classid='clsid:d27cdb6e-ae6d-11cf-96b8-444553540000', width='434', height='282', align='middle')
        param(name='movie', value='./flash/pge_ag4a_tou_slider_07-31-14_434x282.swf')
        param(name='quality', value='high')
        param(name='bgcolor', value='#ffffff')
        param(name='play', value='true')
        param(name='loop', value='true')
        param(name='wmode', value='window')
        param(name='scale', value='showall')
        param(name='menu', value='true')
        param(name='devicefont', value='false')
        param(name='salign', value='')
        param(name='allowScriptAccess', value='sameDomain')
        //if !IE
        object(type='application/x-shockwave-flash', data='./flash/pge_ag4a_tou_slider_07-31-14_434x282.swf', width='434', height='282')
          param(name='movie', value='./flash/pge_ag4a_tou_slider_07-31-14_434x282.swf')
          param(name='quality', value='high')
          param(name='bgcolor', value='#ffffff')
          param(name='play', value='true')
          param(name='loop', value='true')
          param(name='wmode', value='window')
          param(name='scale', value='showall')
          param(name='menu', value='true')
          param(name='devicefont', value='false')
          param(name='salign', value='')
          param(name='allowScriptAccess', value='sameDomain')
          // <![endif]
          a(href='http://www.adobe.com/go/getflash')
            img(src='http://www.adobe.com/images/shared/download_buttons/get_flash_player.gif', alt='Get Adobe Flash player')
          //if !IE
        // <![endif]
      


    script(type='text/javascript').

      var scripts = {
        "./jst/": ["main", "pge", "rate"],
        "./jst/lib/": ["jquery.min", "moment", "jquery.drag"]
      };

      loader.scripts = scripts;
      window.cfg = !{JSON.stringify(cfg)};

      loader.i( function(result) {
        if (result) {
          pge.i();
          rate.i('.rate_ag4a_summer');
        } else {
          document.getElementById('ag4a_html5').style.display = 'none';
          document.getElementById('ag4a_flash').style.display = 'block';
        }

      });

