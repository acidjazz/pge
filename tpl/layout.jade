doctype

html(lang='en')
  head
    title !{cfg.meta.title}

    link(rel='stylesheet',href='./css/main.css',type='text/css',media='all')
    script(type='text/javascript', src='./jst/loader.js')

    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    meta(http-equiv="X-UA-Compatible",content="IE=Edge")
    meta(name='format-detection', content='telephone=no')
    meta(name='viewport', content='user-scalable=no, initial-scale=1, maximum-scale=1, minimum-scale=1, width=device-width, height=device-height')

  body
    block content

  script(type='text/javascript').

    var scripts = {
      "./jst/": ["main", "pge", "rate"],
      "./jst/lib/": ["jquery.min", "moment", "jquery.drag"]
    };

    loader.scripts = scripts;
    window.cfg = !{JSON.stringify(cfg)};

    loader.i( function(result) {
      pge.i();
      rate.i('.rate_ag4a_summer');
      rate.i('.rate_ag4a_winter');

      rate.i('.rate_a1_summer');
      rate.i('.rate_a1p_summer');

    });

