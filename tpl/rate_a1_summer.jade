.title.longtitle A Quick Look at Summer A1<br />Time-of-Use Rates for Business Customers

.graph
  .leftmeasure Cost per kWh
  .flatrate.higher Current Flat Rate ($0.228/kWh)
  .inner
    .zone.z1(data-price=0.212)
      +dots('blue', 60)
    .zone.z2(data-price=0.239)
      +dots('partial', 60)
    .zone.z3(data-price=0.248)
      +dots('orange', 60)
    .zone.z4(data-price=0.239)
      +dots('partial', 60)
    .zone.z5(data-price=0.212)
      +dots('blue', 60)
  .clear
  .bottommeasure
    .measure.m1: span.spacer 
    .measure.m2: span.spacer 
    .measure.m3: span.spacer 
    .measure.m4: span.spacer 
    .measure.m5: span.spacer 
  .bottomtext
    .measure.m1: span.copy 12am
    .measure.m2: span.copy 8:30am
    .measure.m3: span.copy Noon
    .measure.m4: span.copy 6pm
    .measure.m5: span.copy 9:30pm

.slider
  .slide(draggable=true)
    .inner
      .pointer
      .price $0.212
      .copy per kWh
      .nav slide
  .clear
  .bar

