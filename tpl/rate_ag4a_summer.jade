.legend
  .legendzone
    .color.offpeak
    .copy Off-peak
  .legendzone
    .color.onpeak
    .copy On-peak

.title.longtitle A Quick Look at Summer AG4A <br />Time-of-Use Rate for Agricultural Customers

.graph
  .leftmeasure Cost per kWh
  .flatrate Current Flat Rate ($0.234/kWh)
  .inner
    .zone.z1(data-price=0.163)
      +dots('blue', 60)
    .zone.z2(data-price=0.367)
      +dots('orange', 60)
    .zone.z3(data-price=0.163)
      +dots('blue', 60)
  .clear
  .bottommeasure
    .measure.m1: span.spacer 
    .measure.m2: span.spacer 
    .measure.m3: span.spacer 
  .bottomtext
    .measure.m1: span.copy 12:00am
    .measure.m2: span.copy Noon
    .measure.m3: span.copy 6:00pm

.slider
  .slide(draggable=true)
    .inner
      .pointer
      .price $0.163
      .copy per kWh
      .nav slide
  .clear
  .bar

